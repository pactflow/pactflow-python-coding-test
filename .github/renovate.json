{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "pre-commit": {
    "enabled": true
  },
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "automerge": true,
  "packageRules": [
    {
      "groupName": "Ruff",
      "groupSlug": "ruff",
      "matchPackageNames": ["astral-sh/ruff-pre-commit", "ruff"]
    }
  ]
}
